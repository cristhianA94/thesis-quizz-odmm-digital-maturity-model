{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "target": "material-dashboard-angular",
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [{
            "source": "**",
            "destination": "/index.html"
        }]
    },
    "functions": {
        "predeploy": [
            "npm --prefix functions run lint",
            "npm --prefix functions run build"
        ],
        "source": "functions"
    }
}